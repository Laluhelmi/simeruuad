<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_weight="2"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/RKiri"
        android:padding="10dp"
        android:layout_weight="1"
        android:background="@drawable/kotak_komment"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10dp"
            android:id="@+id/username"
            android:layout_alignParentRight="true"
            android:text="username"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Comment Kiri"
            android:layout_below="@+id/username"
            android:id="@+id/commentKiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rkanan"
        android:padding="10dp"
        android:layout_weight="1"
        android:background="@drawable/kotak_komment"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10dp"
            android:id="@+id/usernameKanan"
            android:layout_alignParentRight="true"
            android:text="username"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Comment Kiri"
            android:layout_below="@+id/usernameKanan"
            android:id="@+id/commentKanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
