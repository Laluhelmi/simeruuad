<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.pkklppuad.uad4students.perwalian.CommentTopik">
    <TextView
        android:layout_margin="10dp"
        android:text="JUDUL TOPIK"
        android:id="@+id/judultopik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<ListView
    android:padding="5dp"
    android:layout_above="@+id/linenarkomment"
    android:id="@+id/isicomment"
    android:layout_below="@id/judultopik"
    android:dividerHeight="5dp"
    android:divider="@null"
    android:stackFromBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></ListView>
 <LinearLayout
     android:id="@+id/linenarkomment"
     android:layout_alignParentBottom="true"
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:weightSum="2"
     android:layout_height="wrap_content">
     <EditText
         android:layout_weight="2"
         android:id="@+id/inputkomment"
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
     <Button
         android:id="@+id/kirim"
         android:text="Kirim"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
 </LinearLayout>
</RelativeLayout>
