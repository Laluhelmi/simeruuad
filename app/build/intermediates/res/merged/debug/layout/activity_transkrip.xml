<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.pkklppuad.uad4students.transkrip">
<TextView
    android:text="Nama"
    android:id="@+id/lnama"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:layout_toRightOf="@id/lnama"
    android:text="nama value"
    android:id="@+id/nama"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:layout_below="@+id/lnama"
    android:layout_marginLeft="5dp"
    android:text="Nim"
    android:id="@+id/lnim"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
 <TextView
     android:text="nim value"
     android:id="@+id/nim"
     android:layout_toRightOf="@+id/lnim"
     android:layout_below="@+id/nama"
     android:layout_marginLeft="22dp"
     android:layout_marginTop="5dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
    <View
        android:id="@+id/line"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/nim"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000" />
    <LinearLayout
        android:layout_below="@+id/line"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:padding="5dp"
        android:id="@+id/liner"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.6"
            android:id="@+id/matakuliah"
            android:text="Mata Kuliah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="Bobot"
            android:id="@+id/kode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1.2"
            android:text="Sks"
            android:id="@+id/sks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1.2"
            android:text="Nilai"
            android:id="@+id/nilai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/liner"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000" />
    <ListView
        android:layout_above="@+id/ripk"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/line2"
        android:id="@+id/listranskip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/ripk"
        android:padding="10dp"
        android:background="@drawable/shadow"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/ipk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPK"
            />

    </RelativeLayout>
</RelativeLayout>
